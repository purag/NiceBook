{
  "manifest_version": 2,
  "name": "NiceBook",
  "description": "Filter negative content from your Facebook feed.",
  "version": "1.0",
  "icons": {
    "19": "img/icon19.png",
    "38": "img/icon38.png"
  },
  "page_action": {
    "default_icon": "img/icon38.png",
    "default_popup": "setup.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["ext/bg.js"],
    "persistent": true
  }
}